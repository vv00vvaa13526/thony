import turtle

turtle.fillcolor('grey')
turtle.begin_fill()

turtle.forward(100)
turtle.left(90)
turtle.forward(250)
turtle.left(90)
turtle.forward(100)
turtle.left(90)
turtle.forward(250)
turtle.end_fill()
turtle.penup()
turtle.left(180)
turtle.forward(180)
turtle.right(90)
turtle.forward(50)
text = turtle.textinput('Какого цвета круг?', '')
turtle.fillcolor(text)
turtle.pendown()
turtle.begin_fill()
turtle.circle(25)
turtle.end_fill()
turtle.right(90)
turtle.penup()
turtle.forward(70)
turtle.left(90)
text1 = turtle.textinput('Какого цвета круг?', '')
turtle.fillcolor(text1)
turtle.pendown()
turtle.begin_fill()
turtle.circle(25)
turtle.end_fill()
turtle.right(90)
turtle.penup()
turtle.forward(70)
turtle.left(90)
text2 = turtle.textinput('Какого цвета круг?', '')
turtle.fillcolor(text2)
turtle.pendown()
turtle.begin_fill()
turtle.circle(25)
turtle.end_fill()


